#
# Configuration variables
#

{
  local _lib = lib ;
  local _bin = bin ;

  # SYSTEM_ROOT is set by the build-system
  SYSTEM_LIBDIR ?= $(_lib:R=$(SYSTEM_ROOT)) ;
  SYSTEM_BINDIR ?= $(_bin:R=$(SYSTEM_ROOT)) ;

  # PERSONAL_ROOT is set by the build-system
  PERSONAL_LIBDIR ?= $(_lib:R=$(PERSONAL_ROOT)) ;
  PERSONAL_BINDIR ?= $(_bin:R=$(PERSONAL_ROOT)) ;

  # . is set by the build system
  LIBDIR ?= $(_lib:R=$(PERSONAL_ROOT:E=$(.:P))) ;
  BINDIR ?= $(_bin:R=$(PERSONAL_ROOT:E=$(.:P))) ;
}

LINKFLAGS ?= /NODEFAULTLIB /INCREMENTAL:NO /DEBUG ;

include $(SYSTEM_BUILD_SCRIPTS)/x86-win32-vc6-build.jam ;

